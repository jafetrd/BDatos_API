<Page x:Class="BDatos_API.VISTAS.Patio_Ferrocarril"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:dotNetKitControls="clr-namespace:DotNetKit.Windows.Controls;assembly=DotNetKit.Wpf.AutoCompleteComboBox"
      xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" 
      xmlns:local="clr-namespace:BDatos_API.VISTAS"
      mc:Ignorable="d" 
      d:DesignHeight="726.406" d:DesignWidth="1481.459"
      Title="Patio de ferrocarriles" Background="White">


    <Page.Resources>
        <ResourceDictionary>
            <!-- This style applies to all auto-complete comboboxes in the window by default. -->
            <Style TargetType="dotNetKitControls:AutoCompleteComboBox">
                <Setter Property="ItemsPanel">
                    <Setter.Value>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="FontWeight" Value="Light"></Setter>
                <Setter Property="Margin" Value="5 0 5 0"></Setter>
                <Setter Property="TextAlignment" Value="Left"></Setter>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto">

            <Grid ScrollViewer.CanContentScroll="True" Margin="10 0 10 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions >
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="600"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Text="Patio de ferrocarriles " FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Right"
         FontWeight="Heavy" Foreground="DeepSkyBlue" Grid.Column="1" Grid.Row="0" ></TextBlock>

                <Separator  Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2"></Separator>
                <!--Columna Izquierda-->

                <Grid Grid.Row="1" Grid.Column="0" Width="500">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="1.2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="1.3*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Buque" FontSize="30" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"></TextBlock>
                    <dotNetKitControls:AutoCompleteComboBox SelectedValuePath="Id" TextSearch.TextPath="Name"
                ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" SelectedValue="{Binding SelectedValue}"
                 Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                FontSize="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Grid.Row="0"
                x:Name="buque_Combobox" KeyDown="Buque_Combobox_KeyDown"/>

                    <TextBlock Text="Viaje" FontSize="30" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"></TextBlock>
                    <TextBox x:Name="viaje_textbox" Grid.Row="1" Grid.Column="1" FontSize="25" VerticalAlignment="Center"
                 HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"
                     KeyDown="Viaje_textbox_KeyDown"></TextBox>

                    <TextBlock Text="Altura" FontSize="30" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center"></TextBlock>
                    <ComboBox Name="Altura_combobox" Grid.Row="2" Grid.Column="1" FontSize="25" VerticalAlignment="Center" 
                              HorizontalAlignment="Stretch" KeyDown="Altura_combobox_KeyDown"
                           VerticalContentAlignment="Center" HorizontalContentAlignment="Right">
                        <ComboBoxItem Content="Importacion"></ComboBoxItem>
                        <ComboBoxItem Content="Exportacion"></ComboBoxItem>
                    </ComboBox>

                    <TextBlock Text="Cantidad" FontSize="30" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center"></TextBlock>
                    <xctk:IntegerUpDown Name="cantidad_TextBox" Grid.Row="3" Grid.Column="1" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                                        HorizontalContentAlignment="Right" VerticalContentAlignment="Center" KeyDown="Cantidad_TextBox_KeyDown" Value="0"
                                        Minimum="0" FormatString="N0"></xctk:IntegerUpDown>

                    <TextBlock Text="Presentacion" FontSize="30" Grid.Column="0" Grid.Row="4" VerticalAlignment="Center"></TextBlock>
                    <ComboBox Name="Presentacion_combobox" Grid.Row="4" Grid.Column="1" FontSize="25" VerticalAlignment="Center"
                              HorizontalAlignment="Stretch" KeyDown="Presentacion_combobox_KeyDown"
                           VerticalContentAlignment="Center" HorizontalContentAlignment="Right">
                        <ComboBoxItem Content="Contenedor 20''"></ComboBoxItem>
                        <ComboBoxItem Content="Contenedor 40''"></ComboBoxItem>
                    </ComboBox>

                    <TextBlock Text="Sigla" FontSize="30" Grid.Column="0" Grid.Row="5" VerticalAlignment="Center"></TextBlock>
                    <TextBox Name="Sigla_textbox" Grid.Row="5" Grid.Column="1" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                           VerticalContentAlignment="Center" HorizontalContentAlignment="Right" KeyDown="Sigla_textbox_KeyDown"></TextBox>

                    <TextBlock Text="Numero" FontSize="30" Grid.Column="0" Grid.Row="6" VerticalAlignment="Center"></TextBlock>
                    <xctk:IntegerUpDown  Name="Numero_integer" Grid.Row="6" Grid.Column="1" FontSize="25" VerticalAlignment="Center" 
                                         HorizontalAlignment="Stretch" KeyDown="Numero_integer_KeyDown"
                           VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Value="0" Minimum="0"></xctk:IntegerUpDown>

                    <TextBlock Text="Fecha de entrada" FontSize="30" Grid.Column="0" Grid.Row="7" VerticalAlignment="Center"></TextBlock>
                    <DatePicker  Name="Fechaentrada_textbox" Grid.Row="7" Grid.Column="1" FontSize="25" VerticalAlignment="Center" 
                                 HorizontalAlignment="Stretch" KeyDown="Fechaentrada_textbox_KeyDown"
                           VerticalContentAlignment="Center" HorizontalContentAlignment="Right"></DatePicker>

                    <TextBlock Text="Peso" FontSize="30" Grid.Column="0" Grid.Row="8" VerticalAlignment="Center"></TextBlock>
                    <xctk:DecimalUpDown  Name="Peso_integer" Grid.Row="8" Grid.Column="1" FontSize="25" VerticalAlignment="top" 
                                         HorizontalAlignment="Stretch" KeyDown="Peso_integer_KeyDown"
                           VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Margin="0 15 0 0"></xctk:DecimalUpDown>
                    <StackPanel Name="unidades_panel" Orientation="Horizontal" Grid.Column="1" Grid.Row="8">
                        <RadioButton GroupName="unidades" Name="kg_rbutton" Content="Kg" Margin="10 55 10 0" FontSize="20" FontWeight="Light"
                                     ToolTip="Kilogramos" KeyDown="Kg_rbutton_KeyDown"></RadioButton>
                        <RadioButton GroupName="unidades" Name="Tn_rbutton" Content="TN" Margin="0 55 0 0" FontSize="20" FontWeight="Light"
                                     ToolTip="Toneladas" KeyDown="Tn_rbutton_KeyDown"></RadioButton>
                    </StackPanel>
                </Grid>

                <!--Columna derecha-->
                <Grid Grid.Row="1" Grid.Column="1" Width="500">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="1.2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition ></RowDefinition>
                        <RowDefinition ></RowDefinition>
                        <RowDefinition ></RowDefinition>
                        <RowDefinition ></RowDefinition>
                        <RowDefinition ></RowDefinition>
                        <RowDefinition ></RowDefinition>
                        <RowDefinition ></RowDefinition>
                        <RowDefinition ></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Producto" FontSize="30" Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" Margin="0 10 0 0"></TextBlock>
                    <TextBox Name="producto_textbox" Grid.Row="0" Grid.Column="1" FontSize="25" VerticalAlignment="Top" HorizontalAlignment="Stretch" 
                           VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Margin="0 10 0 0" KeyDown="Producto_textbox_KeyDown"></TextBox>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0">
                        <CheckBox Name="mineral_checkbox" Content="¿Es mineral?" Margin="10 50 10 0" FontSize="20" FontWeight="Light"
                                     ToolTip="Kilogramos" KeyDown="Mineral_checkbox_KeyDown"></CheckBox>
                    </StackPanel>

                    <TextBlock Text="Cliente" FontSize="30" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"></TextBlock>
                    <dotNetKitControls:AutoCompleteComboBox SelectedValuePath="Id" TextSearch.TextPath="Name"
                ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" SelectedValue="{Binding SelectedValue}"
                 Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                FontSize="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Grid.Row="1"
                x:Name="cliente_Combobox" KeyDown="Cliente_Combobox_KeyDown"/>

                    <TextBlock Text="Pedimento" FontSize="30" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center"></TextBlock>
                    <TextBox x:Name="pedimento_textbox"  Grid.Row="2" Grid.Column="1" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                        VerticalContentAlignment="Center" HorizontalContentAlignment="Right" KeyDown="Pedimento_textbox_KeyDown"></TextBox>

                    <TextBlock Text="Valor comercial" FontSize="30" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center"></TextBlock>
                    <xctk:DecimalUpDown Name="valorcomercial_updown" Grid.Row="3" Grid.Column="1" FontSize="25" VerticalAlignment="top" HorizontalAlignment="Stretch" 
                           VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Margin="0 15 0 0"
                                        KeyDown="Valorcomercial_updown_KeyDown"></xctk:DecimalUpDown>

                    <TextBlock FontSize="30" Grid.Column="0" Grid.Row="4" VerticalAlignment="Center">
                        Fecha de 
                        <LineBreak/>
                        autorizacion
                    </TextBlock>
                    <DatePicker Name="fecha_autorizacion" Grid.Row="4" Grid.Column="1" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                           VerticalContentAlignment="Center" HorizontalContentAlignment="Right" KeyDown="Fecha_autorizacion_KeyDown"></DatePicker>

                    <TextBlock Text="Fecha de salida" FontSize="30" Grid.Column="0" Grid.Row="5" VerticalAlignment="Center"></TextBlock>
                    <DatePicker Name="fecha_salida" Grid.Row="5" Grid.Column="1" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                           VerticalContentAlignment="Center" HorizontalContentAlignment="Right" KeyDown="Fecha_salida_KeyDown"></DatePicker>

                    <TextBlock FontSize="30" Text="Indicar salida" Grid.Column="0" Grid.Row="6" VerticalAlignment="Center"></TextBlock>
                    <Button Name="boton_salida"  Grid.Column="1" Grid.Row="6" Content="salida" FontWeight="Light"  FontSize="20" 
                        Style="{StaticResource AccentedSquareButtonStyle}" Margin="10 10 10 10"></Button>

                    <TextBlock FontSize="30" Grid.Column="0" Grid.Row="7" VerticalAlignment="Center">
                        Periodo de 
                        <LineBreak/>
                        almacenaje
                    </TextBlock>
                    <xctk:IntegerUpDown  Grid.Row="7" Grid.Column="1" FontSize="25" VerticalAlignment="top" HorizontalAlignment="Stretch" 
                           VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Margin="0 15 0 0" IsReadOnly="True"></xctk:IntegerUpDown>

                </Grid>
                <Grid Grid.Column="0" Grid.Row="2" Height="80">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Name="boton_guardar"  Grid.Column="0" Content="Guardar" FontWeight="Light"  FontSize="20" 
                        Style="{DynamicResource SquareButtonStyle}" Margin="10 10 10 10"></Button>
                    <Button Name="boton_actualizar"  Grid.Column="1" Content="Actualizar" FontWeight="Light"  FontSize="20" 
                        Style="{DynamicResource SquareButtonStyle}" Margin="10 10 10 10"></Button>
                </Grid>

                <Grid Grid.Column="1" Grid.Row="2" Height="80">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Name="boton_eliminar"  Grid.Column="0" Content="Eliminar" FontWeight="Light"  FontSize="20" 
                        Style="{DynamicResource SquareButtonStyle}" Margin="10 10 10 10"></Button>
                    <Button Name="boton_limpiar"  Grid.Column="1" Content="Limpiar" FontWeight="Light"  FontSize="20" 
                        Style="{DynamicResource SquareButtonStyle}" Margin="10 10 10 10"></Button>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
